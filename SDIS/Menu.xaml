<Window x:Class="SDIS.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SDIS"
        mc:Ignorable="d"
        Title="Menu"  WindowStartupLocation="CenterScreen" WindowState="Maximized" ResizeMode="NoResize">
    <DockPanel x:Name="dockMenu">
        <Menu x:Name="barreMenu" DockPanel.Dock="Top">
            <MenuItem Header="_Accueil" Checked="MenuItem_Checked">
            </MenuItem>
            <MenuItem Header="_Déconnexion" Click="MenuItem_Click">
            </MenuItem>
        </Menu>
        <StackPanel x:Name="panelMenu"  Orientation="Horizontal" Margin="120,100,120,100">
            <StackPanel.Background>
                <SolidColorBrush Color="#FF868181" Opacity="0.5"/>
            </StackPanel.Background>
            <Button x:Name="buttonRechercher" Content="Rechercher les matériels" Margin="140,350,0,350" Background="#FFFF0101" Foreground="White" FontWeight="Bold" Click="buttonRechercher_Click" FontSize="20"/>
            <Button x:Name="buttonVisualiser" Content="Visualiser les demandes d'achats" Margin="750,350,150,350"  Foreground="White" Background="#FFFF0101" FontWeight="Bold" Click="buttonVisualiser_Click" FontSize="20"/>
        </StackPanel>

    </DockPanel>
</Window>
